{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Ahmed Ashraf Helmi's Portfolio",
  "scripts": {
    "dev": "npx tailwindcss -i ./src/styles.css -o ./dist/output.css --watch & npx live-server --port=3000 --open=/index.html",
    "build": "npx tailwindcss -i ./src/styles.css -o ./dist/output.css --minify",
    "start": "npx live-server --port=3000 --open=/index.html"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "live-server": "^1.2.2"
  }
}
